{
  "functions": [
    {
      "source": "functions",
      "codebase": "default"
    },
    {
      "source": "miapideemai",
      "codebase": "miapideemai",
      "ignore": [
        "venv",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ]
    }
  ],
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/calcularIMC/**", // La ruta que deseas redirigir
        "function": "calcularIMC" // El nombre de la función Firebase que manejará la reescritura
      }
    ]
  }
}


